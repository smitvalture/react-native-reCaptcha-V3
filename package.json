{
  "name": "@valture/react-native-recaptcha-v3",
  "version": "1.1.0",
  "description": "React Native component for integrating Google reCAPTCHA v3, providing seamless bot protection for mobile applications.",
  "source": "./src/index.tsx",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/commonjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/module/index.d.ts"
      },
      "require": {
        "types": "./lib/typescript/commonjs/index.d.ts"
      }
    }
  },
  "files": [
    "src",
    "lib",
    "react-native.config.js",
    "!**/__tests__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "recaptcha",
    "google",
    "v3",
    "security",
    "verification"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/smitvalture/react-native-recaptcha-v3.git"
  },
  "author": "Smit Valture <smitvalture@gmail.com> (https://github.com/smitvalture)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smitvalture/react-native-recaptcha-v3/issues"
  },
  "homepage": "https://github.com/smitvalture/react-native-recaptcha-v3#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@react-native-community/cli": "15.0.1",
    "@release-it/conventional-changelog": "^9.0.3",
    "@types/react": "^18.2.44",
    "@types/react-native": "^0.72.8",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.37.5",
    "prettier": "^3.0.3",
    "react": "18.3.1",
    "react-native": "0.76.3",
    "react-native-builder-bob": "^0.33.3",
    "react-native-webview": "^13.12.4",
    "release-it": "^17.10.0",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0",
    "react-native-webview": ">=11.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5"
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json",
          "esm": true
        }
      ]
    ]
  },
  "packageManager": "yarn@1.22.22"
}
